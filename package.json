{
	"name": "schematic-renderer",
	"version": "1.1.22",
	"license": "AGPL-3.0-only",
	"description": "A schematic renderer package for Minecraft schematics using Three.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/Schem-at/schematic-renderer.git"
	},
	"bugs": {
		"url": "https://github.com/Schem-at/schematic-renderer/issues"
	},
	"homepage": "https://github.com/Schem-at/schematic-renderer#readme",
	"keywords": [
		"minecraft",
		"schematic",
		"renderer",
		"three.js",
		"3d",
		"webgl",
		"litematic",
		"nbt"
	],
	"publishConfig": {
		"access": "public"
	},
	"main": "dist/schematic-renderer.umd.js",
	"module": "dist/schematic-renderer.es.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/schematic-renderer.es.js",
			"require": "./dist/schematic-renderer.umd.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"start": "vite",
		"dev": "concurrently \"bun run watch-wasm\" \"bun run start\"",
		"build": "tsc --project tsconfig.build.json && vite build",
		"build-only": "vite build",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"lint": "eslint src/",
		"lint:fix": "eslint src/ --fix",
		"format": "prettier --write \"src/**/*.ts\"",
		"format:check": "prettier --check \"src/**/*.ts\"",
		"typecheck": "tsc --noEmit",
		"prepare": "husky",
		"watch-wasm": "node watch-wasm.js"
	},
	"lint-staged": {
		"src/**/*.ts": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,yml,yaml}": [
			"prettier --write"
		]
	},
	"devDependencies": {
		"@esbuild-plugins/node-globals-polyfill": "^0.2.3",
		"@eslint/js": "^9.39.2",
		"@originjs/vite-plugin-commonjs": "^1.0.3",
		"@types/d3": "^7.4.3",
		"@types/gzip-js": "^0.3.5",
		"@types/lodash": "^4.17.13",
		"@types/node": "^24.10.1",
		"@types/pako": "^2.0.3",
		"@types/three": "^0.176.0",
		"@typescript-eslint/eslint-plugin": "^8.53.0",
		"@typescript-eslint/parser": "^8.53.0",
		"@vitest/coverage-v8": "^4.0.17",
		"@vitest/ui": "^4.0.13",
		"@webgpu/types": "^0.1.66",
		"ajv": "^8.17.1",
		"cors-anywhere": "^0.4.4",
		"d3": "^7.9.0",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"express": "^4.19.2",
		"happy-dom": "^20.0.10",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"request": "^2.88.2",
		"typescript": "^5.4.5",
		"typescript-eslint": "^8.53.0",
		"vite": "^4.3.5",
		"vite-plugin-dts": "^4.5.4",
		"vite-plugin-node-polyfills": "^0.22.0",
		"vitest": "^4.0.13"
	},
	"dependencies": {
		"cubane": "^1.0.19",
		"@ffmpeg/ffmpeg": "^0.12.15",
		"@ffmpeg/util": "^0.12.2",
		"chokidar": "^3.6.0",
		"concurrently": "^8.2.2",
		"deepmerge": "^4.3.1",
		"fs-extra": "^11.2.0",
		"gif.js.optimized": "^1.0.1",
		"gzip-js": "^0.3.2",
		"http-proxy-middleware": "^0.2.0",
		"jszip": "^3.10.1",
		"lil-gui": "^0.19.2",
		"n8ao": "^1.10.0",
		"nucleation": "^0.1.141",
		"pako": "^2.1.0",
		"postprocessing": "^6.35.4",
		"simplex-noise": "^4.0.3",
		"stats-js": "^1.0.1",
		"three": "^0.181.2",
		"three-creative-controls": "^1.0.1",
		"vite-plugin-top-level-await": "^1.4.4",
		"vite-plugin-wasm": "^3.3.0",
		"webm-writer": "^1.0.0"
	}
}
