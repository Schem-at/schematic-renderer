{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"allowImportingTsExtensions": false,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"outDir": "./dist",
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["test", "**/*.test.ts", "src/test/**/*", "dist"]
}
